
DATABASE C:\Program Files\USGS\phreeqc-3.8.6-17100-x64\database\phreeqc.dat

# WAC-specific exchange reactions with enhanced selectivity
EXCHANGE_SPECIES
    Na+ + X- = NaX
        log_k 0.0
    
    Ca+2 + 2X- = CaX2
        log_k 1.3
        -gamma 5.0 0.165
    
    Mg+2 + 2X- = MgX2
        log_k 1.1
        -gamma 5.5 0.2
    
    K+ + X- = KX
        log_k 0.25
        -gamma 3.5 0.015
    
    H+ + X- = HX
        log_k -2.0
        -gamma 9.0 0.0

# Feed solution
SOLUTION 0 Feed water
    temp      25
    pH        7.5
    units     mg/L
    Ca        180
    Mg        80
    Na        50
    K         0
    Cl        0 charge
    Alkalinity 300 as HCO3
    S(6)      0 as SO4
    N(5)      0 as NO3
    water     1 kg

# Initial column solution (low TDS water)
SOLUTION 1-10 Initial column water
    temp      25
    pH        7.0
    Na        10
    Cl        10 charge
    water     250.0 kg

# WAC exchanger in Na form
EXCHANGE 1-10
    X         4.5
    -equilibrate with solution 1-10

# Transport simulation
TRANSPORT
    -cells    10
    -shifts   138
    -time_step 225.0  # seconds
    -flow_direction forward
    -boundary_conditions flux flux
    -lengths  10*0.625  # m3
    -dispersivities 10*0.002  # m
    -porosities 10*0.4
    -punch_cells 10
    -punch_frequency 1

# Output for breakthrough curves
SELECTED_OUTPUT 1
    -file transport.sel
    -reset false
    -solution true
    -time true
    -step true
    -pH true
    -alkalinity true
    -totals Ca Mg Na K Cl C(4) S(6)
    -molalities H+ OH- CO2 HCO3- CO3-2
    -saturation_indices Calcite Aragonite Dolomite

USER_PUNCH 1
    -headings BV Cell Ca_mg/L Mg_mg/L Na_mg/L Hardness_CaCO3 pH Alk_mg/L CO2_mg/L
    -start
    10 shifts = STEP_NO / 10
    20 IF (shifts = 0) THEN GOTO 200
    30 bv = shifts
    40 PUNCH bv, CELL_NO
    50 ca_mg = TOT("Ca") * 40.078 * 1000
    60 mg_mg = TOT("Mg") * 24.305 * 1000
    70 na_mg = TOT("Na") * 22.990 * 1000
    80 PUNCH ca_mg
    90 PUNCH mg_mg
    100 PUNCH na_mg
    110 hardness_caco3 = ca_mg * 2.5 + mg_mg * 4.1
    120 PUNCH hardness_caco3
    130 PUNCH -LA("H+")
    140 PUNCH ALK * 61000
    150 PUNCH TOT("C(4)") * 44010
    200 REM end
    -end

END
