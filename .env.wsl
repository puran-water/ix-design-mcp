# WSL/Linux-specific environment configuration for IX Design MCP Server
# Copy this file to .env when running on WSL/Linux

# PHREEQC executable path (Linux binary)
PHREEQC_EXE=/home/hvksh/process/phreeqc/bin/phreeqc

# PHREEQC database path (Linux)
PHREEQC_DATABASE=/home/hvksh/process/phreeqc/share/doc/phreeqc/database/phreeqc.dat

# Subprocess timeout for PHREEQC calls (seconds)
# Should be less than MCP client timeout
PHREEQC_RUN_TIMEOUT_S=90

# MCP simulation timeout (seconds)
# Should be less than client timeout (~120s) but more than PHREEQC timeout
MCP_SIMULATION_TIMEOUT_S=100

# Project root for WSL (optional, auto-detected if not set)
# IX_DESIGN_MCP_ROOT=/home/hvksh/process/ix-design-mcp